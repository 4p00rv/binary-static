<div id="banner">
  <div class="container">
    <div class="gr-12 gr-row">
      <div class="gr-12">
        <div id="xtop">
          <h1 class="dark">[% l("The <strong>Premier Platform</strong> for Binary Options Trading") %]</h1>
          <p class="break">[% l("Trade <strong>24/7</strong>, even on weekends.") %]</p>
          <form id="verify-email-form">
            <div class="gr-parent gr-8 gr-12-m" id="open-account">
              <input autocomplete="off" class="gr-9" id="email" maxlength="50" placeholder="[% l('Enter your email') %]"></input>
              <input class="gr-3 button" id="btn-verify-email" type="submit" value="[% l('Create Free Account') %]"></input>
              <p class="gr-12 error-message" id="signup_error" style="display:none"></p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div id="xsection1">
    <div class="gr-12 gr-parent">
      <h1>
        [% l("The easiest way to get started in the financial markets") %]
      </h1>
      <p>
        [% l("Trade in the world's financial markets in a simple, user-friendly platform.") %]
      </p>
      <div class="gr-7 gr-12-m gr-parent">
        <img class="responsive" src="[% request.url_for('images/pages/tour/trade-tutorial_1.svg') %]"/>
      </div>
      <div class="gr-5 gr-12-m gr-parent">
        <ul>
          <li>[% l("<span>All markets:</span> currencies, stocks, indices, and commodities.") %]</li>
          <li>[% l("<span>All market conditions:</span> up/down, touch/no-touch, stays in/goes out.") %]</li>
          <li>[% l("<span>All durations:</span> from 10 seconds to 365 days.") %]</li>
          <li>[% l("<span>All payouts:</span> from \$1 to \$50,000.") %]</li>
        </ul>
      </div>
    </div>
  </div>
</div>
