@{
    view.separator_line = ({no_wrapper, show_mobile, _class, sub_class, invisible}) => {
        const _classes1 = `${show_mobile ? '' : 'gr-hide-m'} ${_class || ''}`.trim();
        const _classes2 = `separator-line ${sub_class || ''} ${invisible ? '' : 'border-bottom'}`;

        <div @html.when(!no_wrapper, `class="${_classes1}"`) >
            <div @html.class(_classes2) ></div>
        </div>
    }
}