[% PROCESS common/components/tabs.html.tt %]

[% WRAPPER tab_container class='static_full tab-with-subsection' %]
    [% INCLUDE tabs_subtabs id='legal-menu' items=[
        { id='legal',           text=l('Terms and Conditions'), subtabs=[
            { id='legal-binary', text=l('Binary Options') },
            { id='legal-mt',     text=l('MetaTrader') },
        ] },
        { id='datafeed',        text=l('Data Feed') },
        { id='privacy',         text=l('Security and Privacy') },
        { id='copyright',       text=l('Copyright') },
        { id='risk',            text=l('Risk Disclaimer'),      subtabs=[
            { id='risk-binary', text=l('Binary Options') },
            { id='risk-mt',     text=l('MetaTrader') },
        ]  },
        { id='order-execution', text=l('Order Execution'),      subtabs=[
            { id='order-execution-binary', text=l('Binary Options') },
            { id='order-execution-mt',     text=l('MetaTrader') },
        ]  },
        { id='payment-agents',        text=l('Payment Agents') },
    ] %]
    <div class="tab-content gr-padding-10">
        [% WRAPPER tab_content_container %]
            [% WRAPPER tab_content id='legal-binary' %][% PROCESS static/legal/terms_and_conditions.html.tt %][% END %]
            [% WRAPPER tab_content id='legal-mt' %][% PROCESS static/legal/metatrader/terms_and_conditions.html.tt %][% END %]
            [% WRAPPER tab_content id='datafeed' %][% PROCESS static/legal/datafeed.html.tt %][% END %]
            [% WRAPPER tab_content id='privacy' %][% PROCESS static/legal/privacy.html.tt %][% END %]
            [% WRAPPER tab_content id='copyright' %][% PROCESS static/legal/copyright.html.tt %][% END %]
            [% WRAPPER tab_content id='risk-binary' %][% PROCESS static/legal/risk_disclaimer.html.tt %][% END %]
            [% WRAPPER tab_content id='risk-mt' %][% PROCESS static/legal/metatrader/risk_disclaimer.html.tt %][% END %]
            [% WRAPPER tab_content id='order-execution-binary' %][% PROCESS static/legal/order_execution.html.tt %][% END %]
            [% WRAPPER tab_content id='order-execution-mt' %][% PROCESS static/legal/metatrader/order_execution.html.tt %][% END %]
            [% WRAPPER tab_content id='payment-agents' %][% PROCESS static/legal/payment_agents.html.tt %][% END %]
        [% END %]
    </div>
[% END %]
