[% PROCESS components/tabs.html.tt %]

[% subtabs=[
    { id='binary', text=l('Binary Options') },
    { id='mt',     text=l('MetaTrader') },
] %]

[% WRAPPER tab_container class='static_full tab-with-subsection' %]
    [% INCLUDE tabs_subtabs id='legal-menu' items=[
        { id='legal',           text=l('Terms and Conditions'), subtabs=subtabs },
        { id='datafeed',        text=l('Data Feed') },
        { id='privacy',         text=l('Security and Privacy') },
        { id='copyright',       text=l('Copyright') },
        { id='risk',            text=l('Risk Disclaimer'),      subtabs=subtabs },
        { id='order-execution', text=l('Order Execution'),      subtabs=subtabs },
    ] %]
    <div class="tab-content gr-padding-10">
        [% WRAPPER tab_content_container %]
            [% WRAPPER tab_content id='legal-binary' %][% INCLUDE legal/terms_and_conditions.html.tt %][% END %]
            [% WRAPPER tab_content id='legal-mt' %][% INCLUDE legal/metatrader/terms_and_conditions.html.tt %][% END %]
            [% WRAPPER tab_content id='datafeed' %][% INCLUDE legal/datafeed.html.tt %][% END %]
            [% WRAPPER tab_content id='privacy' %][% INCLUDE legal/privacy.html.tt %][% END %]
            [% WRAPPER tab_content id='copyright' %][% INCLUDE legal/copyright.html.tt %][% END %]
            [% WRAPPER tab_content id='risk-binary' %][% INCLUDE legal/risk_disclaimer.html.tt %][% END %]
            [% WRAPPER tab_content id='risk-mt' %][% INCLUDE legal/metatrader/risk_disclaimer.html.tt %][% END %]
            [% WRAPPER tab_content id='order-execution-binary' %][% INCLUDE legal/order_execution.html.tt %][% END %]
            [% WRAPPER tab_content id='order-execution-mt' %][% INCLUDE legal/metatrader/order_execution.html.tt %][% END %]
        [% END %]
    </div>
[% END %]
