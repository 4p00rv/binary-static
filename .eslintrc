{
    'parser': 'babel-eslint',
    'env': {
        'es6':     true,
        'browser': true,
        'amd':     true,
        'mocha':   true,
        'jquery':  true,
    },
    'globals': {
        'jQuery':  false,
        '$':       false,
        'require': false,
        'module':  false,
        'global':  false,

        'dataLayer':       true,

        'texts_json':      false,
    },
    'rules': {
        'array-callback-return': 0,
        'camelcase':             0,
        'func-names':            ['error', 'never'],
        'keyword-spacing':       ['error', { after: true }],
        'no-param-reassign':     ['error', { props: false }],
        'no-script-url':         0,
        'one-var':               ['error', { initialized: 'never', uninitialized: 'always' }],
        'semi':                  ['error', 'always'],
        // react rules
        'import/no-extraneous-dependencies': [0, {'extensions': ['.jsx']}],
        'jsx-quotes':            ['error', 'prefer-single'],
        'react/prop-types':      0,
    },
    'extends': [
        'airbnb-base',
        'binary',
        'plugin:react/recommended',
    ],
    'parserOptions': {
        'ecmaVersion': 6,
        'ecmaFeatures': {
            'jsx': true
        },
    },
}
